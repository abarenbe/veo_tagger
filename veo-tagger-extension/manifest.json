{
    "manifest_version": 3,
    "name": "Veo Video Tagger",
    "version": "1.0",
    "description": "Simple extension to tag timestamps on Veo videos",
    "permissions": [
        "activeTab",
        "scripting",
        "sidePanel",
        "storage"
    ],
    "host_permissions": [
        "*://app.veo.co/*",
        "*://*.veo.co/*"
    ],
    "action": {
        "default_title": "Veo Tagger"
    },
    "background": {
        "service_worker": "background.js"
    },
    "side_panel": {
        "default_path": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "*://app.veo.co/*",
                "*://*.veo.co/*"
            ],
            "js": [
                "content.js"
            ],
            "all_frames": true
        }
    ]
}